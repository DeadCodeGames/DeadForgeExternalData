{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "$ref": "#/definitions/gameObject"
        },
        {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/gameObject"
            },
            "additionalProperties": false
        }
    ],
    "definitions": {
        "gameObject": {
            "type": "object",
            "properties": {
                "matches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "source": {
                                "enum": ["steam", "epic", "itch"]
                            },
                            "id": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "source",
                            "id"
                        ]
                    },
                    "additionalProperties": false,
                    "minItems": 1
                },
                "media": {
                    "type": "object",
                    "properties": {
                        "iconUrl": {
                            "$ref": "#/definitions/mediaUrl"
                        },
                        "heroUrl": {
                            "$ref": "#/definitions/mediaUrl"
                        },
                        "logoUrl": {
                            "$ref": "#/definitions/mediaUrlWithPosition"
                        },
                        "headerUrl": {
                            "$ref": "#/definitions/mediaUrl"
                        },
                        "capsuleUrl": {
                            "$ref": "#/definitions/mediaUrl"
                        }
                    }
                }
            },
            "required": [
                "matches",
                "media"
            ],
            "additionalProperties": false
        },
        "mediaUrl": {
            "type": "object",
            "allOf": [
                {
                    "oneOf": [
                        {
                            "properties": {
                                "filePath": { "type": "string" },
                                "remoteUrl": { "type": "string" }
                            },
                            "required": ["filePath", "remoteUrl"],
                            "additionalProperties": false
                        },
                        {
                            "properties": {
                                "filePath": {
                                    "type": "object",
                                    "additionalProperties": { "type": "string" }
                                },
                                "remoteUrl": {
                                    "type": "object",
                                    "additionalProperties": { "type": "string" }
                                }
                            },
                            "required": ["filePath", "remoteUrl"],
                            "additionalProperties": false
                        }
                    ]
                }
            ]
        },
        "mediaUrlWithPosition": {
            "type": "object",
            "properties": {
                "filePath": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    ]
                },
                "remoteUrl": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    ]
                },
                "logo_position": {
                    "type": "object",
                    "properties": {
                        "pinned_position": {
                            "enum": ["BottomLeft", "CenterCenter", "UpperCenter", "BottomCenter"]
                        },
                        "height_pct": {
                            "type": "number"
                        },
                        "width_pct": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "pinned_position",
                        "height_pct",
                        "width_pct"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "filePath",
                "remoteUrl",
                "logo_position"
            ]
        }
    }
}